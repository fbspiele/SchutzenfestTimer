<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignEnd="@id/ListConditionsFurBenachrichtigungRelCenter">

        <ImageButton
            android:background="@drawable/ic_delete_24px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/conditionLoschen"
            android:contentDescription="@string/pref_title_notificationNameDefault" />

        <EditText
            android:id="@+id/alleSovieleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:digits="0123456789"

            android:gravity="end" />

    </LinearLayout>


    <TextView
        android:id="@+id/ListConditionsFurBenachrichtigungRelCenter"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/abstandWenigerEditText"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@id/ListConditionsFurBenachrichtigungRelCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:digits="0123456789"
        android:gravity="end" />

</RelativeLayout>